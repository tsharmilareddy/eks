pipeline {
    agent any

    stages {
        stage('Docker Build') {
            steps {
                sh '''
                 # login to ecr
                aws ecr get-login-password --region us-east-1 |  docker login --username AWS --password-stdin 537593809027.dkr.ecr.us-east-1.amazonaws.com
                 docker build -t 537593809027.dkr.ecr.us-east-1.amazonaws.com/ecr-repository:$BUILD_NUMBER .
                #push the image to ecr
                 docker push 537593809027.dkr.ecr.us-east-1.amazonaws.com/ecr-repository:$BUILD_NUMBER
                '''
            }
        }
        stage('EKS Deploy') {
            steps {
                sh '''
                # apply kubectl
                cd k8s/
                // sed -i 's/TAG/$BUILD_NUMBER/g' deployment.yaml
                // kubectl apply -f .
                '''

            }
        }
    }
}